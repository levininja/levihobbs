@{
    ViewData["Title"] = "Home Page - Hybrid Design";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
}

<div class="minimalist-container">
    <!-- Asymmetrical Header -->
    <header class="site-header">
        <div class="header-content">
            <div class="logo">
                <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" class="logo-icon">
                    <circle cx="50" cy="50" r="35" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor"/>
                    <path d="M50,15 L50,85" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor"/>
                    <path d="M15,50 L85,50" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor"/>
                </svg>
                <h1>LEVI HOBBS</h1>
            </div>
            <nav class="main-nav">
                <a href="#about">About</a>
                <a href="#categories">Categories</a>
                <a href="#newsletter">Newsletter</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Hero Section with Dynamic Grid -->
        <section class="hero-section">
            <div class="hero-grid">
                <div class="hero-text">
                    <h2>Writer</h2>
                    <p>Exploring the human experience through science fiction, fantasy, and thoughtful essays</p>
                </div>
                <div class="hero-image">
                    <div class="image-container">
                        <img src="~/images/portrait_1.jpeg" alt="Levi Hobbs" class="portrait">
                        <div class="image-overlay"></div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Categories Section with Dynamic Cards -->
        <section id="categories" class="categories-section">
            <div class="categories-grid">
                <a href="/Reader/ReaderPage?category=Science%20Fiction" class="category-card sci-fi gradient-purple">
                    <div class="card-content">
                        <div class="card-icon">
                            <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                <path d="M50,20 L70,40 L70,60 L50,80 L30,60 L30,40 Z" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor" />
                                <path d="M50,35 L60,45 L60,55 L50,65 L40,55 L40,45 Z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor" />
                            </svg>
                        </div>
                        <h3>Science Fiction</h3>
                    </div>
                </a>

                <a href="/Reader/ReaderPage?category=Fantasy" class="category-card fantasy gradient-gold">
                    <div class="card-content">
                        <div class="card-icon">
                            <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                <path d="M50,20 L50,80" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor" />
                                <path d="M30,40 L70,40" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor" />
                                <path d="M40,30 L60,30" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor" />
                            </svg>
                        </div>
                        <h3>Fantasy</h3>
                    </div>
                </a>

                <a href="/Reader/ReaderPage?category=Modern%20Fiction" class="category-card modern gradient-orange">
                    <div class="card-content">
                        <div class="card-icon">
                            <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                <path d="M50,20 C60,18 70,20 75,30 C80,40 85,50 80,60 C75,70 65,80 50,80 C35,80 25,70 20,60 C15,50 20,40 25,30 C30,20 40,22 50,20 Z" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor" />
                            </svg>
                        </div>
                        <h3>Modern Fiction</h3>
                    </div>
                </a>

                <a href="/Reader/ReaderPage?category=Book%20Reviews" class="category-card reviews gradient-neutral">
                    <div class="card-content">
                        <div class="card-icon">
                            <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                                <path d="M50,20 L58,38 L78,40 L64,54 L68,74 L50,64 L32,74 L36,54 L22,40 L42,38 L50,20 Z" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none" stroke="currentColor" />
                            </svg>
                        </div>
                        <h3>Book Reviews</h3>
                    </div>
                </a>
            </div>
        </section>

        <!-- About Section with Dynamic Layout -->
        <section id="about" class="about-section">
            <div class="about-content">
                <div class="about-text">
                    <h2>About</h2>
                    <p>Levi is a writer and thinker who finds wonder in both the natural world and human creativity. From climbing mountains to brewing mead, from studying ancient texts to designing board games, he explores the intersection of nature, culture, and imagination.</p>
                    <p>Through "The Book of Levi," he shares weekly essays and stories that blend science fiction, fantasy, memoir, and poetry. Join him as we explore the depths of human experience through the lens of literature and life.</p>
                    <p>Levi lives in Spokane, Washington with his wife and their two dogs. Together, they run an AirBNB and are planning to create an artist's retreat and workshop space. When they're not writing or hosting guests, you'll find them exploring the beautiful Inland Northwest wild.</p>
                </div>
            </div>
        </section>

        <!-- Newsletter Section with Dynamic Form -->
        <section id="newsletter" class="newsletter-section">
            <img src="~/images/bookoflevi.jpg" alt="The Book of Levi" class="newsletter-icon">
            <div class="newsletter-content">
                <div class="newsletter-header">
                    <h2>The Book of Levi</h2>
                </div>
                <p>Get an essay or short story in the realms of science fiction and fantasy delivered each week</p>
                <form class="newsletter-form" novalidate>
                    <div class="form-group">
                        <input type="email" placeholder="email@example.com" class="newsletter-input" required>
                        <button type="submit" class="newsletter-button">Subscribe</button>
                    </div>
                    <div class="newsletter-message"></div>
                </form>
            </div>
        </section>
    </main>
</div>

@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
} 