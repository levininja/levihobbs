@model levihobbs.Models.RssChannel

@if (Model != null)
{
    <div class="rss-feed">
        <h3>Goodreads RSS Feed</h3>
        
        @if (!string.IsNullOrEmpty(Model.Title))
        {
            <p><strong>Title:</strong> @Model.Title</p>
        }
        
        @if (Model.Meta != null)
        {
            <div class="rss-meta">
                <h4>Meta</h4>
                @if (!string.IsNullOrEmpty(Model.Meta.Name))
                {
                    <p><strong>Name:</strong> @Model.Meta.Name</p>
                }
                @if (!string.IsNullOrEmpty(Model.Meta.Content))
                {
                    <p><strong>Content:</strong> @Model.Meta.Content</p>
                }
            </div>
        }
        
        @if (Model.AtomLink != null)
        {
            <div class="rss-atom-link">
                <h4>Atom Link</h4>
                @if (!string.IsNullOrEmpty(Model.AtomLink.Href))
                {
                    <p><strong>Href:</strong> <a href="@Model.AtomLink.Href">@Model.AtomLink.Href</a></p>
                }
                @if (!string.IsNullOrEmpty(Model.AtomLink.Rel))
                {
                    <p><strong>Rel:</strong> @Model.AtomLink.Rel</p>
                }
                @if (!string.IsNullOrEmpty(Model.AtomLink.Type))
                {
                    <p><strong>Type:</strong> @Model.AtomLink.Type</p>
                }
            </div>
        }
        
        @if (!string.IsNullOrEmpty(Model.Copyright))
        {
            <p><strong>Copyright:</strong> @Model.Copyright</p>
        }
        
        @if (!string.IsNullOrEmpty(Model.Link))
        {
            <p><strong>Link:</strong> <a href="@Model.Link">@Model.Link</a></p>
        }
        
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p><strong>Description:</strong> @Model.Description</p>
        }
        
        @if (!string.IsNullOrEmpty(Model.Language))
        {
            <p><strong>Language:</strong> @Model.Language</p>
        }
        
        @if (!string.IsNullOrEmpty(Model.LastBuildDate))
        {
            <p><strong>Last Build Date:</strong> @Model.LastBuildDate</p>
        }
        
        @if (Model.Image != null)
        {
            <div class="rss-image">
                <h4>Image</h4>
                @if (!string.IsNullOrEmpty(Model.Image.Title))
                {
                    <p><strong>Title:</strong> @Model.Image.Title</p>
                }
                @if (!string.IsNullOrEmpty(Model.Image.Link))
                {
                    <p><strong>Link:</strong> <a href="@Model.Image.Link">@Model.Image.Link</a></p>
                }
                @if (!string.IsNullOrEmpty(Model.Image.Width))
                {
                    <p><strong>Width:</strong> @Model.Image.Width</p>
                }
                @if (!string.IsNullOrEmpty(Model.Image.Height))
                {
                    <p><strong>Height:</strong> @Model.Image.Height</p>
                }
                @if (!string.IsNullOrEmpty(Model.Image.Url))
                {
                    <p><strong>URL:</strong> <a href="@Model.Image.Url">@Model.Image.Url</a></p>
                    <img src="@Model.Image.Url" alt="@Model.Image.Title" width="@Model.Image.Width" height="@Model.Image.Height" />
                }
            </div>
        }
        
        @if (Model.Items != null && Model.Items.Count > 0)
        {
            <div class="rss-items">
                <h4>Items</h4>
                @foreach (var item in Model.Items)
                {
                    <div class="rss-item">
                        @if (!string.IsNullOrEmpty(item.Title))
                        {
                            <h5>@item.Title</h5>
                        }
                        
                        @if (item.Guid != null && !string.IsNullOrEmpty(item.Guid.Value))
                        {
                            <p><strong>GUID:</strong> @item.Guid.Value</p>
                        }
                        
                        @if (item.ParsedPubDate.HasValue)
                        {
                            <p><strong>Publication Date:</strong> @item.ParsedPubDate.Value.ToString("f")</p>
                        }
                        
                        @if (!string.IsNullOrEmpty(item.Link))
                        {
                            <p><strong>Link:</strong> <a href="@item.Link">@item.Link</a></p>
                        }
                        
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <div class="rss-description">
                                <strong>Description:</strong>
                                @Html.Raw(item.Description)
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
}
else
{
    <p>Unable to load Goodreads RSS feed.</p>
} 