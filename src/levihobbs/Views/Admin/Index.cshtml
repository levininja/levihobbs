@{
    ViewData["Title"] = "Admin";
}

<div class="container mt-4">
    <h1>Admin Dashboard</h1>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Book Data Management</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="@Url.Action("BookshelfConfiguration")" class="list-group-item list-group-item-action">
                            <i class="fas fa-shelf"></i> Bookshelf Configuration
                        </a>
                        <a href="@Url.Action("ToneConfiguration")" class="list-group-item list-group-item-action">
                            <i class="fas fa-palette"></i> Tone Configuration
                        </a>
                        <a href="@Url.Action("ToneAssignment")" class="list-group-item list-group-item-action">
                            <i class="fas fa-tags"></i> Tone Assignment
                        </a>
                        <a href="@Url.Action("ImportBookReviews")" class="list-group-item list-group-item-action">
                            <i class="fas fa-upload"></i> Import Book Reviews
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>System Status</h5>
                </div>
                <div class="card-body">
                    <p><strong>Book Data API:</strong> <span class="badge bg-success">Running on port 5020</span></p>
                    <p><strong>Main Application:</strong> <span class="badge bg-success">Running on port 5000</span></p>
                    <p><strong>Book Tones API:</strong> <span class="badge bg-success">Running on port 5010</span></p>
                </div>
            </div>
        </div>
    </div>
</div> 